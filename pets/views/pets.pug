html
  head
    title Pets
    link(href='/css/main.css', rel='stylesheet')
  body
    h1 Pets
    form(id='updateForm' action='/updateName', method='POST')
      table
        tr
          th Pet name
          th Pet species
        each pet in pets
          tr
            td
              input(id='petID' type='hidden', value=pet.pet_id, name='petId')
              input(id='name' class='pet-name', value=pet.name, name='name')
            td= pet.species_name
      <input type="submit" style="display: none" />

    div(id='message')
    
    script(src='/functions.js')
